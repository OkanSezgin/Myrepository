<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
  
	<div class="col-md-offset-3 col-md-6">
        <h1><%= title %></h1>
        <br>
        <table class="table table-bordered table-striped table-hover">
            <!-- Header Row-->
            <tr class="d-flex">
                <th class="text-center">Name</th>
                <th class="text-center">Phone number</th>
                <th class="text-center">Email</th>
                <th class="text-center"></th>
                <th class="text-center"></th>

            </tr>

            <!-- Repeatable Template Row -->

            <% for(let count = 0; count < ContactList.length; count++) { %>
                <tr class="d-flex">
                    <td class="text-center"><%= ContactList[count].name %></td>
                    <td class="text-center"><%= ContactList[count].number %></td>
                    <td class="text-center"><%= ContactList[count].email %></td>
                    <td class="text-center">
                            <a href="/contact-list/edit/<%= ContactList[count].id %>" class="btn btn-primary">
                            <i class="fas fa-pencil-alt"></i> Edit</a>
                        </td >
                        <td class="text-center">
                            <a href="/contact-list/delete/<%= ContactList[count].id %>" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Delete</a>
                        </td >
                </tr>
            <% } %>
        </table>
    	<div>
  
